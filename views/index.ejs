<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="/docs/5.3/assets/js/color-modes.js"></script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Blog-Project</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />

    <style>
      /* Custom Body Styles */
      body {
        font-family: "Poppins", sans-serif;
        color: white;
        margin: 0;
        padding: 0;
        scroll-behavior: smooth;
      }

      /* Background Video */
      .bg-video {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
      }

      /* Custom Navbar */
      .custom-navbar {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        transition: background 0.3s ease, box-shadow 0.3s ease;
      }

      .custom-navbar .navbar-brand {
        font-size: 24px;
        font-weight: bold;
        letter-spacing: 1px;
        color: white;
        transition: color 0.3s ease;
      }

      .custom-navbar .navbar-nav .nav-link {
        font-weight: 600;
        padding: 12px 20px;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
        color: white;
      }

      .custom-navbar .navbar-nav .nav-link:hover {
        background: rgba(255, 255, 255, 0.2);
        color: #ff7eb3;
      }

      /* Card Styles */
      .card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        height: 100%;
      }

      .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
      }

      .card img {
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease;
      }

      .card:hover img {
        transform: scale(1.05);
      }

      .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .btn-group a {
        min-width: 70px;
      }

      /* Footer */
      footer {
        background: rgba(255, 255, 255, 0.2);
        padding: 30px 0;
        text-align: center;
        position: relative;
        width: 100%;
        box-shadow: 0 -4px 10px rgba(0, 0, 0, 0.2);
      }

      footer p {
        color: white;
      }

      /* Main Content */
      main {
        padding-top: 80px; /* Adjust to fit the fixed navbar */
        min-height: 100vh;
      }

      /* Improved Card Spacing */
      .album .container {
        padding-bottom: 50px; /* Bottom space for better layout */
      }

      @media (max-width: 768px) {
        .row-cols-md-3 {
          row-gap: 20px;
        }
      }
    </style>
  </head>

  <body>
    <!-- Background Video -->
    <video autoplay loop muted playsinline class="bg-video">
      <source
        src="https://cdn.pixabay.com/video/2023/03/09/153976-817104245_large.mp4"
        type="video/mp4"
      />
      Your browser does not support the video tag.
    </video>
    

    <!-- Navbar -->
    <%- include('./partials/header') %>

    <main>
      <div class="album py-5">
        <div class="container mt-4">
          <!-- Blog List -->
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            <% blogs.forEach((blog) => { %>
            <div class="col">
              <div class="card shadow-sm">
                <img
                  class="card-img-top"
                  src="<%= blog.image %>"
                  alt="Blog Image"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
                  <h6 class="card-subtitle mb-2 text-muted">
                    <%= blog.author %>
                  </h6>
                  <p class="card-text"><%= blog.content.substring(0, 100) %>...</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a
                        class="btn btn-sm btn-outline-primary"
                        href="/blogView/<%= blog.id %>"
                        >Read More</a
                      >
                      <a
                        class="btn btn-sm btn-outline-warning"
                        href="/edit/<%= blog.id %>"
                        >Edit</a
                      >
                      <a
                        class="btn btn-sm btn-outline-danger"
                        href="/delete/<%= blog.id %>"
                        >Delete</a
                      >
                    </div>
                    <small class="text-muted"
                      ><%= new Date(blog.createdAt).toLocaleString() %></small
                    >
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </main>

    <footer>
      <div class="container">
        <p>Â© 2025 Blog Project. All rights reserved.</p>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
